{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "out",
		"lib": [
			"es2018"
		],
		"sourceMap": true,
		"rootDir": "src",
		"esModuleInterop": true,
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
